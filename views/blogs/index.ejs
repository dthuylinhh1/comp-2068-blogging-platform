<%- include ('../partials/header') %>
<div class="container my-5">
    <header>
        <h1>Archive</h1>
        
    </header>
    <hr>
    <div class="content">
        <% for (let blog of blogs){ %> 
            <div class="card my-3">
                <div class="card-header clearfix">
                    <div class=" float-left">
                        <h5 class="card-title"> <%= blog.title %> </h5>
                        <% if (typeof blog.user !== 'undefined') { %>
                            <small>~ <%= blog.user.fullname %></small>
                        <% } %>
                    </div>

                    <div class="float-right">
                        <small><%= blog.updatedAt %></small>
                    </div>
                </div>

                <div class="card-body">
                    <p class="card-text">
                        <%- blog.synopsis %>
                    </p>
                    <a href="/blogs/<%= blog.id %>">more...</a>
                </div>
                <% if (authorized && (typeof blog.user === 'undefined' || blog.user.email === email)) { %>
                    <div class="card-footer">
                        <a href="/blogs/<%= blog.id %>/edit">
                            <i class="fa fa-edit"></i>
                        </a>
                        &nbsp;/&nbsp;
                        <a href="/blogs/<%= blog.id %>/delete">
                            <i class="fa fa-trash"></i>
                        </a>
                    </div>
                <% } %>
            </div> 
        <% } %>
    </div>
</div> 


<%- include ('../partials/footer') %>